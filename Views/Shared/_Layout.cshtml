<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="DevHub" asp-action="Index">DevHub</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (Html.ViewContext.HttpContext.Request.Cookies["Username"] is null || Html.ViewContext.HttpContext.Request.Cookies["Username"] == "")
                            {
                            <div class="loginbtnright">
                                <button id="LoginHelper" class="btn btn-dark" onclick="DisplayLogin() || event.preventDefault()">Login</button>
                                <form hidden id="DisplayLogin" method="post" action="/DevHub/Login">
                                    <input type="text" placeholder="Username" name="Username" required />
                                    <input class="btn btn-dark" type="submit" value="Login" />
                                </form>
                            </div>
                            }
                            else
                            {
                                <div class="loginbtnright">
                                    @Html.ViewContext.HttpContext.Request.Cookies["Username"]
                                </div>
                            }
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - DevHub 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
